{% extends 'base.html.twig' %}

{% block title %}Sylove | Création d'ingrédient{% endblock %}


{% block body %}


     <div class="container">
        <div class="row">
            <div class="col-lg-12">
                 <div class="page-content">

                        <!-- ***** Featured Start ***** -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="feature-banner header-text">
                                <div class="row">                                       
                                        <div class="col-lg-12">
                                            <div class="thumb">
                                            <img src="assets/images/feature-right.jpg" alt="" style="border-radius: 23px;">
                                            </div>
                                        </div>
                                   </div>
                               </div>
                            </div>
                        </div>
                      </div>
                  </div>
              </div>
            </div>
      </div>

    <!-- ***** Featured End ***** -->
    
    <div class="container mt-4">

        <h1 class="display-4 mt-5" >Création d'un ingrédient</h1>
         {# affiche tout le formulaire d'un coup {{ form(form) }} #}  

        {{ form_start(form) }} 

        <div class="form-group">
         <h6> {{ form_label(form.name) }}</h6>
          {{ form_widget(form.name) }}
          <div class="form-error">
            {{ form_errors(form.name) }}
          </div>
        </div>
        <div class="form-group">
        <h6>{{ form_label(form.price) }}</h6>
          {{ form_widget(form.price) }}
          <div class="form-error">
            {{ form_errors(form.price) }}
          </div>
        </div>
        <div class="form-group">
          {{ form_row(form.submit) }}
          
          </div>
          {{ form_end(form) }}
        </div>



    </div>
 {% endblock %}   